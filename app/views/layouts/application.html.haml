!!!
%html{ lang: "en" }
  %head
    %title Videeotic

    %meta{ charset: "utf-8" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }

    = stylesheet_link_tag    "application", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags

  %body
    .row
      .colums
        = yield

  %footer


- if system('pidof omxplayer.bin')

  .row
    .columns
      .button-bar
        %ul.button-group
          %li= link_to 'Play/Pause', playback_play_path, class: 'button', remote: true
          %li= link_to 'quit', playback_quit_path, class: 'button', remote: true
